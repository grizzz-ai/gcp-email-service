{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Verification Code Email Payload",
  "description": "Schema for verification code email workflow payload",
  "type": "object",
  "properties": {
    "verification_code": {
      "type": "string",
      "pattern": "^[0-9]{6}$",
      "description": "6-digit verification code"
    },
    "provider": {
      "type": "string",
      "enum": ["google", "apple", "phone", "email"],
      "description": "Authentication provider being linked"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "description": "Code expiration timestamp (ISO 8601)"
    },
    "user_email": {
      "type": "string",
      "format": "email",
      "description": "User's primary email address"
    },
    "correlation_id": {
      "type": "string",
      "description": "Request correlation ID for tracking"
    }
  },
  "required": ["verification_code"],
  "additionalProperties": false
}