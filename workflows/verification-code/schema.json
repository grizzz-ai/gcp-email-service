{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.grizz.ai/workflows/verification-code.json",
  "title": "Verification Code Email Payload",
  "type": "object",
  "required": ["code"],
  "properties": {
    "code": {
      "type": "string",
      "minLength": 4,
      "description": "Verification code to include in email"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO timestamp when code expires"
    },
    "subject": {
      "type": "string",
      "description": "Optional override for email subject"
    }
  }
}
